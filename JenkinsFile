pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                sh 'node --version'
                sh 'npm --version'
            }
        }
        
        stage('with docker') {
            agent  {
                docker {
                    image 'node:18-alpine'
                }
            }
            
            steps {
                echo 'with docker'
                sh 'node --version'
                sh 'npm --version'
            }
        }
    }
}
