pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                sh 'node --version'
                sh 'npm --version'
            }
        }
        
        stage('Build') {
            agent  {
                docker {
                    image 'node:18-alpine'
                }
            }
            
            steps {
                cleanWs()
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
    }
}
