pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                sh 'node --version'
                sh 'npm --version'
            }
        }
        
        stage('Build') {
            agent  {
                docker {
                    image 'node:18-alpine'
                }
            }
            
            steps {
                cleanWs()
               
                script{
                    echo 'executing the script'
                    currentBuild.changeSets.each {
                        echo it
                    }
                }
            
            }
        }
    }
}
